{
  "name": "trpc-server-react-app-setup",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "app:dev": "NODE_ENV=development vite dev",
    "app:build": "vite build",
    "server:dev": "npm run server:build && concurrently -n 'build,serve' 'npm:server:dev:build' 'npm:server:dev:serve'",
    "server:dev:build": "NODE_ENV=development COMMAND=dev node ./esbuild.server.mjs",
    "server:dev:serve": "NODE_ENV=development node --env-file=./.env --watch ./dist/server/main.js",
    "server:build": "COMMAND=build node ./esbuild.server.mjs",
    "server:start": "NODE_ENV=production node --env-file=./.env ./dist/server/main.js",
    "dev": "concurrently -n 'app,server' 'npm:app:dev' 'npm:server:dev'",
    "build": "npm run clean && npm run server:build && npm run app:build",
    "clean": "shx rm -rf ./dist",
    "format": "biome format --write .",
    "lint": "biome lint",
    "lint:fix": "biome lint --apply-unsafe .",
    "script:example": "node --import tsx/esm --env-file=./.env ./scripts/example.ts"
  },
  "dependencies": {
    "@fastify/cookie": "^9.3.1",
    "@fastify/cors": "^9.0.1",
    "@fastify/express": "^3.0.0",
    "@tanstack/react-query": "^5.40.1",
    "@trpc/client": "^11.0.0-rc.390",
    "@trpc/react-query": "^11.0.0-rc.390",
    "@trpc/server": "^11.0.0-rc.390",
    "devalue": "^5.0.0",
    "fastify": "^4.27.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "superjson": "^2.2.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.0",
    "@types/node": "^20.14.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "esbuild": "^0.21.4",
    "postcss": "^8.4.38",
    "postcss-import": "^16.1.0",
    "shx": "^0.3.4",
    "tsx": "^4.12.0",
    "typescript": "^5.4.5",
    "vite": "^5.2.12",
    "vite-tsconfig-paths": "^4.3.2"
  }
}
